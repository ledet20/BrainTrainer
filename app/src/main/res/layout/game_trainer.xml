<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/scoreCount"
            android:layout_width="82dp"
            android:layout_height="53dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="41dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="145dp"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="192dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <Button
                android:id="@+id/topLeft"
                android:layout_width="106dp"
                android:layout_height="76dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:gravity="center"
                android:onClick="valueChange"
                android:tag="0" />

            <Button
                android:id="@+id/topRight"
                android:layout_width="119dp"
                android:layout_height="71dp"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:gravity="center"
                android:onClick="valueChange"
                android:tag="1" />

            <Button
                android:id="@+id/bottomLeft"
                android:layout_width="108dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:gravity="center"
                android:onClick="valueChange"
                android:tag="2" />

            <Button
                android:id="@+id/bottomRight"
                android:layout_width="115dp"
                android:layout_height="74dp"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:gravity="center"
                android:onClick="valueChange"
                android:tag="3" />
        </GridLayout>

        <TextView
            android:id="@+id/secondsRemain"
            android:layout_width="69dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="30"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="@+id/scoreCount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scoreCount"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/multiplyVal"
            android:layout_width="79dp"
            android:layout_height="45dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="49dp"
            android:layout_marginStart="49dp"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/secondsRemain"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintLeft_toRightOf="@+id/secondsRemain"
            app:layout_constraintRight_toLeftOf="@+id/scoreCount"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
